@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Make the image occupy the full width, and be responsive (scale automatically) */
    img {
        width: 100%;
        height: auto;
    }
</style>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="2000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/bbqBeef.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h1 class="bg-dark text-white"> BBQ Beef </h1>
            </div>
        </div>
        <div class="item">
            <img src="~/images/chickenPineapple.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h1 class="bg-dark text-white">  Chicken and Pineapple </h1>
            </div>
        </div>
        <div class="item">
            <img src="~/images/pepperoniFeast.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h1 class="bg-dark text-white">   Pepperoni Feast       </h1>
            </div>
        </div>
        <div class="item">
            <img src="~/images/vegetarian.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h1 class="bg-dark text-white">   Vegetarian    </h1>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <h2 class="text-center">Pizzas Available</h2>
        <ul>
            <li>BBQ Beef</li>
            <li>Chicken and Pineapple</li>
            <li>Pepperoni Feast</li>
            <li>Vegetarian</li>
        </ul>
    </div>
    <div class="col-md-6">
        <h2 class="text-center">Useful Links</h2>
        <ul>
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-area="" asp-controller="Home" asp-action="Index">About</a></li>
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Pizza Index</a></li>
        </ul>
    </div>
</div>
